window.setInterval(function () {
    var height = Math.max(document.body["clientHeight"], document.body["offsetHeight"], document.documentElement["offsetHeight"]) + 5;

    postOFResize(height);
}, 500);

function postOFResize(height) {

    // Message with path and height
    var message = 'OFResize::href=' + window.location.href + '|height=' + height;

    // Add target ID if defined
    var id = document.body.getAttribute('iframe-target-id');
    if (id !== null) {
        message = message + "|id=" + id;
    }

    window.parent.postMessage(message, '*');
}
